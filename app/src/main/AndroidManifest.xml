<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:ignore="CoarseFineLocation" />
    <uses-permission android:name="APP"

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_moitagne"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_moitagne_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MontaigneApp"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.Api-key"
            android:value="" />

        <activity
            android:name=".MainActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.spt.carimboUnico.CarimboUnicoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.spt.projeto.ProjetoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.spt.furo.FuroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.spt.ensaio.EnsaioActivity"
            android:exported="false" />
        <activity
            android:name=".activity.carimboDefinitivo.CarimboDefinitivoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.home.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MontaigneApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.montaigne.montaigneapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>

</manifest>