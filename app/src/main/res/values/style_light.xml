<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--- Button padr達o do app. -->
    <style name="ButtonPadrao_light" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="backgroundTint">@color/color_primary_light</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--- ImageButton padr達o do app. -->
    <style name="ImageButton_light" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">#00042741</item>
        <item name="tint">@color/color_primary_light</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <!--- EditText padr達o do app Claro -->
    <style name="Edit_Text_light" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/fundo_dark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name ="android:background">@drawable/style_edit_text_light</item>
    </style>

    <!-- Imputlayout Padr達o do app Light-->

    <style name="ImputLight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/fundo_dark</item>
        <item name="startIconTint">@color/color_primary_light</item>
        <item name="errorIconTint">@color/color_primary_dark</item>
        <item name="startIconScaleType">centerInside</item>
        <item name="helperTextTextColor">@color/color_primary_dark</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textSize">14dp</item>


    </style>

    <style name="Tollbar_light" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:background">@color/color_primary_light</item>
    <item name="android:textColorPrimary">@color/white</item>
    </style>

<style name="CardViewLight" parent="Widget.Material3.CardView.Outlined">
    <item name="cardBackgroundColor">#FFFFFF</item>
</style>
    <style name="CardViewLight_furo" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/accent</item>

</style>
</resources>