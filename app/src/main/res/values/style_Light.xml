<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--- Button padrão do app. -->
    <style name="ButtonPadrao_light" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--- ImageButton padrão do app. -->
    <style name="ImageButton_light" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">#00042741</item>
        <item name="tint">@color/color_primary</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <!--- EditText padrão do app Claro -->
    <style name="Edit_Text_light" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name ="android:background">@drawable/style_edit_text_light</item>
    </style>



    <style name="ImputLight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="startIconTint">@color/color_primary</item>
        <item name="startIconScaleType">centerInside</item>
        <item name="helperTextTextColor">@color/destaque</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textSize">14dp</item>





</style>
</resources>