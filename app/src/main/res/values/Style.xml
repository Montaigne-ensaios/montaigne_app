<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--- Button padrão do app. -->

    <style name="ButtonPadrao" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <!--- ImageButton padrão do app. -->

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">#00042741</item>
        <item name="tint">@color/color_primary</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <!--- EditText padrão do app. -->

<style name="Edit_Text" parent="Widget.AppCompat.EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">14dp</item>

    <item name="android:padding">10dp</item>
    <item name ="android:background">@drawable/style_edit_text</item>

</style>


</resources>