<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Padrão do tema claro . -->
    <style name="Theme.MontaigneApp" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary color and color secondary. -->

        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryDark">@color/color_primary_light</item>
        <item name="navigationIconTint">@color/white</item>

        <item name="colorSecondary">@color/color_primary_light</item>
        <!-- Status bar color. -->

        <!-- fundo-->
        <item name="colorOnSecondary">@color/fundo_light</item>
        <item name="android:textColorHint">@color/hint</item>


        <!-- menu-->
        <item name="itemIconTint">@color/white</item>


        <!-- Color de interação com butões -->
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorSurface">@color/fundo_light</item>
        <item name="colorError">#B00020</item>

        <item name="checkboxStyle">@style/Checkbox_light</item>

        <!-- Estilos de textos. -->
        <item name="textInputStyle">@style/ImputLight</item>
        <item name="android:textColor">@color/fundo_dark</item>
        <item name="toolbarStyle">@style/Tollbar_light</item>


        <!-- Estilos gerais padrão do tema light. -->
        <item name="materialButtonStyle">@style/ButtonPadrao_light</item>
        <item name="imageButtonStyle">@style/ImageButton_light</item>
        <item name="editTextStyle">@style/Edit_Text_light</item>
        <item name="iconTint">@color/color_primary_light</item>










        <!--Styles do aplicativo. -->

    </style>

    <style name="Theme.MontaigneApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MontaigneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MontaigneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>