<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Padrão do tema claro . -->
    <style name="Theme.MontaigneApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">



        <!-- Primary color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Estilos padrão. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="materialButtonStyle">@style/ButtonPadrao</item>
        <item name="imageButtonStyle">@style/ImageButton</item>




        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--Styles do aplicativo. -->
    </style>

    <style name="Theme.MontaigneApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MontaigneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MontaigneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />






</resources>