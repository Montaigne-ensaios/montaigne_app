<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Padrão do tema claro . -->
    <style name="Theme.MontaigneApp" parent="Theme.MaterialComponents.Light.NoActionBar">



        <!-- Primary color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Estilos padrão. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="materialButtonStyle">@style/ButtonPadrao</item>
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="editTextStyle">@style/Edit_Text</item>






        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>

        <!--Button flutuante-->
        <item name="colorOnSecondary">@color/white</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>

        <!--Styles do aplicativo. -->
    </style>

    <style name="Theme.MontaigneApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MontaigneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MontaigneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




</resources>