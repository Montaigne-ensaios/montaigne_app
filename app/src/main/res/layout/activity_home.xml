<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <include
        android:id="@+id/toolbarHomeInclude"
        layout="@layout/toolbar_home"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-6dp" />


    <TextView
        android:id="@+id/textFiltroEnsaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        android:text="@string/title_Filtros_Ensaios"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageFilterEnsaio"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMeusProjetos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/title_Meus_Projetos"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/recyclerCategorias" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textFiltroEnsaio"
        app:layout_constraintTop_toBottomOf="@+id/textFiltroEnsaio" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProjetosSalvos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textMeusProjetos">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imageFilterEnsaio"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textFiltroEnsaio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textFiltroEnsaio"

        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon_filter" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="showPopup"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textMeusProjetos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textMeusProjetos"
        app:srcCompat="@drawable/icon_increase" />

</androidx.constraintlayout.widget.ConstraintLayout>