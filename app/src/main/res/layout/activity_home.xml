<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <TextView
        android:id="@+id/textFiltroEnsaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/TxtHomeFiltrosEnsaiosStr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMeusProjetos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/TxtHomeMeusProjetosStr"
        app:layout_constraintStart_toStartOf="@+id/textFiltroEnsaio"
        app:layout_constraintTop_toBottomOf="@+id/recyclerCategorias" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textFiltroEnsaio"
        app:layout_constraintTop_toBottomOf="@+id/textFiltroEnsaio" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProjetosSalvos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textMeusProjetos">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewProjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_fab_add"
        app:elevation="20dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageFilterEnsaio"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textFiltroEnsaio"
        app:layout_constraintEnd_toStartOf="@+id/textFiltroEnsaio"
        app:layout_constraintTop_toTopOf="@+id/textFiltroEnsaio"
        app:layout_constraintVertical_bias="0.428"
        app:srcCompat="@drawable/icon_filter" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textMeusProjetos"
        app:layout_constraintEnd_toStartOf="@+id/textMeusProjetos"
        app:layout_constraintTop_toTopOf="@+id/textMeusProjetos"
        app:srcCompat="@drawable/icon_folder" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fabNewProjeto"
        app:layout_constraintEnd_toEndOf="@+id/fabNewProjeto"
        app:layout_constraintStart_toStartOf="@+id/fabNewProjeto"
        app:layout_constraintTop_toBottomOf="@+id/recyclerProjetosSalvos"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon_delet" />

</androidx.constraintlayout.widget.ConstraintLayout>