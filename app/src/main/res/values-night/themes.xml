<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MontaigneApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/color_primary_light</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorSecondary">@color/color_primary_dark</item>




        <!-- Estilos padrÃ£o. -->
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundColor">#000000</item>
        <item name="toolbarStyle">@style/Tollbar_dark</item>
        <item name="materialButtonStyle">@style/ButtonPadrao_Dark</item>
        <item name="imageButtonStyle">@style/ImageButton_Dark</item>
        <item name="editTextStyle">@style/Edit_Text_dark</item>
        <item name="android:textViewStyle">@style/TextView_Dark</item>
        <item name="windowActionModeOverlay">true</item>






    </style>
    <style name="Theme.MontaigneApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MontaigneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MontaigneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


