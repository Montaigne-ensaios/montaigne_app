        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MontaigneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MontaigneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


