<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MontaigneApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/destaque</item>
        <item name="colorPrimaryVariant">@color/fundo</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>


        <!-- Estilos padrÃ£o. -->
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        //fundo
        <item name="backgroundColor">#000000</item>

        <item name="android:textColorHint">@color/material_dynamic_neutral_variant50</item>
        <item name="android:buttonStyle">@style/ButtonPadrao_Dark</item>
        <item name="imageButtonStyle">@style/ImageButton_Dark</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="editTextStyle">@style/Edit_Text_dark</item>
